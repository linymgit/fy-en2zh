<idea-plugin>
  <id>com.forrily.en2zh.plugin.id</id>
  <name>fy-en2zh</name>
  <version>1.0</version>
  <vendor email="xggstudio@sina.com" url="http://www.forrily.com">林益民</vendor>

  <!--suppress PluginXmlValidity -->
  <description><![CDATA[
      选中要翻译的单词和句子双击鼠标左键或者右键鼠标选择“翻译”菜单项，然后显示翻译结果。（翻译使用的是有道翻译api）
      项目源码：https://github.com/linymgit/fy-en2zh.git
    ]]></description>

  <!--suppress PluginXmlValidity -->
  <change-notes><![CDATA[
      Add change   here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="EditorBasics.EditorIllustration" class="com.lym.EditorIllustration" text="翻译"
            description="选中单词双击翻译">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      <mouse-shortcut keymap="fy" keystroke="Button1 Double-Click"></mouse-shortcut>
    </action>
  </actions>


</idea-plugin>